<%= form_with model: @user do |form| %>
  <div class="mb-3 col-4">
    <%= form.label :first_name, "Nombre", class:"form-label"%>
    <%= form.text_field :first_name, placeholder: "Escribre tu nombre", class:"form-control" %>
  </div>
  <div class="mb-3 col-4">
    <%= form.label :last_name, "Apellido", class:"form-label"%>
    <%= form.text_field :last_name, placeholder: "Escribe tu apellido", class:"form-control" %>
  </div>
  <div class="mb-3 col-4">
    <%= form.label :email, "Email", class:"form-label"%>
    <%= form.text_field :email, placeholder: "Escribe tu email", class:"form-control" %>
  </div>
  <div>    
    <%= form.submit "Guardar", class: "btn btn-primary"%>
  </div>  
<% end %>

